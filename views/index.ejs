<body>
     <header class="navbar navbar-bright navbar-fixed-top" role="banner">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" class="navbar-brand">Home</a>
            </div>
            <nav class="collapse navbar-collapse" role="navigation">

                <ul class="nav navbar-nav">
                  <!-- <li><a></a></li> -->
                </ul>

                <ul class="nav navbar-right navbar-nav">
                  <!--
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-search"></i></a>
                        <ul class="dropdown-menu" style="padding:12px;">
                            <form class="form-inline">
                                <button type="submit" class="btn btn-default pull-right"><i class="glyphicon glyphicon-search"></i></button>
                                <input type="text" class="form-control pull-left" placeholder="Search">
                            </form>
                        </ul>
                    </li>
                    -->
                </ul>
            </nav>
        </div>
    </header>
    <div class="container">
    <div class="jumbotron">
        <p><strong><%= title %></strong></p>
        <p>Using cloud service: <%= cloudService %></p>
    </div>
        
    </div>

        <div class="container">
        <form class="form-horizontal" action="/upload" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label class="control-label col-sm-2" for="description">Tag</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" name="description" value="localTest" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="uploadFile">File to upload</label>
                <div class="col-sm-10">
                    <input class="form-control" type="file" name="uploadFile" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" value="Upload" class="btn btn-primary" />
                </div>
            </div>

        </form>
    </div>

     <div class="container">
       <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Original</th>
                    <th>Transformed</th>
                    <th>Inserted</th>
                </tr>
            </thead>
            <tbody>
                 <%  items.forEach(function (item) { %>
                 <tr>
                    <! -- https://embed.plnkr.co/nhlFPz -->
                    <td><%= item.RowKey %></td>
                    <td><%= item.description %></td>
                    <td><a class="btn btn-info" href="<%= item.original_url %>" target="_blank"  data-toggle="popover" data-img="<%= item.original_url %>">Original</a></td>
                    <td><a class="btn btn-success" href="<%= item.transformed_url %>" target="_blank"  data-toggle="popover" data-img="<%= item.original_url %>">Transformed</a></td>
                    <td><%= item.submitted.replace(/T/, ' ').replace(/\..+/, '')    %></td>
                </tr>
                <%  }) %>              
            </tbody>
        </table>
     </div>
</body>
<script>
    $(document).ready(function(){
        $('[data-toggle="popover"]').popover(); 
    });

    // Add custom JS here
    $('a[data-toggle="popover"]').popover({
        html: true,
        trigger: 'hover',
      
    content: function(){return '<img src="'+$(this).data('img') + '" width="270" />';}
    });
</script>
</html>
